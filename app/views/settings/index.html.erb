<%- model_class = Setting -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:maintanance) %></th>
      <th><%= model_class.human_attribute_name(:admin_password) %></th>
      <th><%= model_class.human_attribute_name(:hashtag) %></th>
      <th><%= model_class.human_attribute_name(:twitter_user) %></th>
      <th><%= model_class.human_attribute_name(:twitter_app_id) %></th>
      <th><%= model_class.human_attribute_name(:twitter_app_token) %></th>
      <th><%= model_class.human_attribute_name(:twitter_app_oauth) %></th>
      <th><%= model_class.human_attribute_name(:twitter_app_oauth_token) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= link_to setting.id, setting_path(setting) %></td>
        <td><%= setting.status %></td>
        <td><%= setting.maintanance %></td>
        <td><%= setting.admin_password %></td>
        <td><%= setting.hashtag %></td>
        <td><%= setting.twitter_user %></td>
        <td><%= setting.twitter_app_id %></td>
        <td><%= setting.twitter_app_token %></td>
        <td><%= setting.twitter_app_oauth %></td>
        <td><%= setting.twitter_app_oauth_token %></td>
        <td><%=l setting.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_setting_path(setting), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      setting_path(setting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_setting_path,
            :class => 'btn btn-primary' %>
